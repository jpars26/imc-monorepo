{
  "name": "imc-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w api\" \"npm run dev -w web\"",
    "build": "npm run build -ws",
    "lint": "npm run lint -ws",
    "format": "npm run format -ws",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "concurrently": "^9.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "zod": "^3.25.76"
  }
}
